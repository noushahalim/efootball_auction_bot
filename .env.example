# Bot Configuration
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=YourBotUsername

# Admin Configuration
SUPER_ADMIN_ID=your_telegram_user_id

# Group IDs (use @userinfobot to get group IDs)
# For supergroups, the ID format is -100xxxxxxxxxx
AUCTION_GROUP_ID=-1001234567890
DATA_GROUP_ID=-1001234567891
UNSOLD_GROUP_ID=-1001234567892

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/
DATABASE_NAME=efootball_auction

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Webhook Configuration (optional)
USE_WEBHOOK=False
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_PORT=8443

# Development Settings
DEBUG=False
LOG_LEVEL=INFO

# Optional: Sentry for error tracking
SENTRY_DSN=

# Optional: Analytics
GOOGLE_ANALYTICS_ID=

# Timezone
TIMEZONE=UTC